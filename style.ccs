body {
  font-family: Arial, sans-serif;
  margin: 40px;
  background-color: #f9f9f9;
}

h1 {
  color: #333;
}

label, select, button {
  display: block;
  margin: 10px 0;
}

button {
  padding: 10px 20px;
  background-color: #007ACC;
  color: white;
  border: none;
  cursor: pointer;
}

button:hover {
  background-color: #005F99;
}